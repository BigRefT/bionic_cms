<h1>Permissions</h1>
<% render_region :top do |top| %>
  <% top.pagination_counts do %>
    <p><%= will_paginate_record_display(@permissions) %></p>
  <% end %>
<% end %>
<div class="list_content">
  <%= render_region :before_list %>
  <table class="list_table">
    <thead>
      <tr>
        <% render_region :list_headers do |list_headers| %>
          <% list_headers.name_column_header do %><th>Name</th><% end %>
          <% list_headers.user_groups_column_header do %><th>User Groups</th><% end %>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => 'permission', :collection => @permissions %>
      <% if @permissions.length == 0 %>
      <tr><td colspan="<%= admin_interface.permissions.index.list_headers.length %>" class="no_entries">No Entries</td></tr>
      <% end %>
    </tbody>
  </table>
  <% render_region :after_list do |after_list| %>
    <% after_list.pagination_links do %>
      <%= will_paginate_links(@permissions) %>
    <% end %>
  <% end %>
  <div class="action_row">
    <%= render_region :action_row %>
  </div>
</div>
<%= render_region :bottom %>