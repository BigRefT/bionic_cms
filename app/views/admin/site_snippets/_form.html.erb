<% field_set_tag "#{save_label} Site Snippet" do -%>
  <% render_region :form_top do |form_top| %>
    <% form_top.edit_errors do %>
      <%= error_messages_for :site_snippet %>
    <% end %>
  <% end %>
  <% render_region :form do |form| %>
    <% form.edit_name do %>
      <%= f.text_field :name, :label => "Snippet Name", :required => true, :help => "This name is used to reference the snippet in layouts and pages.<br />{{ &lt;name&gt; | snippet }}" %>
    <% end %>
    <% form.edit_content_type do %>
      <%= f.select(
            :content_type,
            [['Plain Text', 'plain text'], ['HTML', 'html']],
            :label => "Content Type",
            :required => true,
            :help => "Determines what editor you get for entering the content.<br />Plain Text - General editor.<br />HTML - WYSIWYG Editor."
          )
      %>
    <% end %>
  <% end %>
  <% render_region :form_bottom do |form_bottom| %>
    <% form_bottom.edit_buttons do %>
      <%= f.submit_or_back save_label, @site_snippet.new_record? ? admin_site_snippets_path : admin_site_snippet_path(@site_snippet) %>
    <% end %>
  <% end %>
<% end %>