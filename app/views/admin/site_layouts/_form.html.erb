<%= render :partial => "/admin/shared/edit_area",
           :locals => { :text_area_id => "site_layout_content",
                        :syntax => "html" } %>

<% field_set_tag "#{save_label} Site Layout" do -%>
  <% render_region :form_top do |form_top| %>
    <% form_top.edit_errors do %>
      <%= error_messages_for :site_layout %>
    <% end %>
  <% end %>
  <% render_region :form do |form| %>
    <% form.edit_name do %>
      <%= f.text_field :name, :label => "Name:", :required => true %>
    <% end %>
    <% form.edit_content do %>
      <%= f.text_field :content_type, :label => "Content Type:", :help => "What type of page will be generated with this layout?<br />text/html, text/css, etc." %>
      <%= f.text_area :content, :label => "Content:", :required => true, :help => "#{save_label == 'Update' ? site_layout_draft_toggle_link : ''}" %>
    <% end %>
  <% end %>
  <% render_region :form_bottom do |form_bottom| %>
    <% form_bottom.edit_buttons do %>
      <%= f.submit_or_back save_label, admin_site_layouts_path %>
    <% end %>
  <% end %>
<% end %>