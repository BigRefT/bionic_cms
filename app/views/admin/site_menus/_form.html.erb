<% field_set_tag "Create Site Menu" do -%>
  <% render_region :form_top do |form_top| %>
    <% form_top.edit_errors do %>
      <%= error_messages_for :site_menu %>
    <% end %>
  <% end %>
  <% render_region :form do |form| %>
    <% form.edit_name do %>
      <%= f.text_field :name, :label => "Menu Name", :required => true %>
    <% end %>
  <% end %>
  <% render_region :form_bottom do |form_bottom| %>
    <% form_bottom.edit_buttons do %>
      <%= f.submit_or_back "Create", admin_site_menus_url %>
    <% end %>
  <% end %>
<% end %>