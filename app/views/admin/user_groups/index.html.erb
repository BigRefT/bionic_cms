<h1>User Groups</h1>
<% render_region :top do |top| %>
  <% top.pagination_counts do %>
    <p><%= will_paginate_record_display(@user_groups) %></p>
  <% end %>
<% end %>
<div class="list_content">
  <%= render_region :before_list %>
  <table class="list_table">
    <thead>
      <tr>
        <% render_region :list_headers do |list_headers| %>
          <% list_headers.name_column_header do %><th>Name</th><% end %>
          <% list_headers.permissions_column_header do %><th>Permissions</th><% end %>
          <% list_headers.actions_column_header do %><th>Actions</th><% end %>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => 'user_group', :collection => @user_groups %>
      <% if @user_groups.length == 0 %>
      <tr><td colspan="<%= admin_interface.user_groups.index.list_headers.length %>" class="no_entries">No Entries</td></tr>
      <% end %>
    </tbody>
  </table>
  <% render_region :after_list do |after_list| %>
    <% after_list.pagination_links do %>
      <%= will_paginate_links(@user_groups) %>
    <% end %>
  <% end %>
  <div class="action_row">
    <% render_region :action_row do |action_row| %>
      <% action_row.new_user_group do %>
        <%= link_to 'New User Group', new_admin_user_group_path %>
      <% end %>
    <% end %>
  </div>
</div>
<%= render_region :bottom %>