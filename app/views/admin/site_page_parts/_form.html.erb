<% field_set_tag "#{save_label} Site Page Part" do -%>
  <% render_region :form_top do |form_top| %>
    <% form_top.edit_errors do %>
      <%= error_messages_for :site_page_part %>
    <% end %>
  <% end %>
  <% render_region :form do |form| %>
    <% form.edit_name do %>
      <%= f.text_field :name, :label => "Name:", :required => true %>
    <% end %>
    <% form.edit_content_type do %>
      <%= f.select(
            :content_type,
            [['Plain Text', 'plain text'], ['HTML', 'html']],
            :label => "Content Type",
            :required => true,
            :help => "Determines what editor you get for entering the content.<br />Plain Text - General editor.<br />HTML - WYSIWYG Editor."
          )
      %>
    <% end %>
  <% end %>
  <% render_region :form_bottom do |form_bottom| %>
    <% form_bottom.edit_buttons do %>
      <%= f.submit_or_back save_label, admin_site_page_path(@page) %>
    <% end %>
  <% end %>
<% end %>